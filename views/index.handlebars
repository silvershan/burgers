<div class="container">

    <div class="jumbotron">
        <h1>Eat-da-Burger!</h1>
        <br>
        <h2>Make a Burger</h2>
        <panel>
            <form class="create-form">
                <div class="form-group">
                    <label for="newBurger">New Burger:</label>
                    <input type="text" id="newBurger" name="burger">

                    <button type="submit" class="btn btn-success" id="addBurger">Add burger!</button>
                </div>
            </form>
        </panel>
    </div><!-- /jumbotron -->

    <div class="row">
        <!-- Undevoured Burgers -->
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading" id="lefthead"><strong>New Burgers</strong></div>
                <div class="panel-body">
                    <ul>
                        {{#each burgers}}
                            {{#unless devoured}}
                                <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
                                <button type="button" class="eatburger btn btn-warning" id ="eatbutton" data-id="{{this.id}}" data-newDevoured="{{devour}}">Devour it!</button>
                                <hr>
                              {{/unless}}
                          {{/each}}
                    </ul>
                </div>
            </div>
        </div>
        <!-- Devoured Burgers -->
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading" id="righthead"><strong>Devoured Burgers</strong></div>
                <div class="panel-body">
                    <ul>
                        {{#each burgers}}
                            {{#if devoured}}
                                <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
                                <button type="button" class="trashburger btn btn-danger" id ="trashburger" data-id="{{this.id}}" data-newDevoured="{{devour}}">Delete burger!</button>
                                <hr>
                              {{/if}}
                          {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div><!-- /row -->

</div><!-- /container -->